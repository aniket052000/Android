<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ourlogo"
    tools:context=".Cart">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="My cart"
        android:textColor="@color/white"
        android:textSize="15dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartrecyclerxyz"
        android:layout_width="409dp"
        android:layout_height="620dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Ctotal"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartrecyclerxyz" />

    <TextView
        android:id="@+id/Totaldisplay"
        android:layout_width="180dp"
        android:layout_height="41dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ctotal" />

    <Button
        android:id="@+id/placeorderfragment"
        android:layout_width="210dp"
        android:layout_height="67dp"
        android:text="Place order"
        android:textColor="@color/white"
        android:backgroundTint="@color/ourlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ctotal"
        app:layout_constraintTop_toBottomOf="@+id/cartrecyclerxyz" />

</androidx.constraintlayout.widget.ConstraintLayout>